<form method="POST" action="/update/<%= user.id %>">
    <div class="form-group">
        <input type="text" name="name" id="name" class="form-control" placeholder="First name"
            value="<%=user.name %>">
    </div>
    <div class="form-group">
        <input type="text" name="lstname" id="lstname" class="form-control" placeholder="Last name"
            value="  <%=user.lstname%> ">
    </div>
    <div class="form-group">
        <input type="text" name="email" class="form-control" id="email" placeholder="example@email.com"
            value="  <%=user.email%>">
    </div>
    <button class="btn btn-primary btn-sm btn-block" type="submit">
         Update 
    </button>
</form>