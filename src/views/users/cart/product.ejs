<div class="row justify-content-center mt-5 align-items-center">
    <div class="col-12">
        <span>
            Total: <%= productList.totalToPay %>
        </span>
    </div>
    <div class="col-12 d-flex justify-content-center align-items-center">
        <% for (let product of productList) { %>
        <div class="card" style="width: 18rem;">
            <div class="card-body">
                <h5 class="card-title"><%= product.name %></h5>
                <div class="row">
                    <div class="col-6">
                        <h6 class="card-subtitle mb-2 text-muted"> $ <%= product.price %> Mx</h6>
                    </div>
                    <div class="col-6">
                        <h6 class="card-subtitle mb-2 text-muted">Cant: <%= product.qty %> pz.</h6>
                    </div>
                </div>
                <div class="d-flex justify-content-end align-items-end mt-4">
                    <form action="/delete-product/<%= product.id %>" method="POST">
                        <button type="submit" class="btn btn-danger btn-sm"> Borrar </button>
                    </form>
                </div>
            </div>
        </div>
        <% } %>
    </div>
    <div class="col-12 pt-2">
        <form action="/buy/<%= productList %>" method="POST">
            <button type="submit" class="btn btn-primary btn-block">Comprar</button>
        </form>
    </div>
</div>